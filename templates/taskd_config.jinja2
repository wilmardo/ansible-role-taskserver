confirmation=1
extensions=/usr/local/libexec/taskd
ip.log=on
log=/tmp/taskd.log
pid.file=/tmp/taskd.pid
queue.size=10
request.limit=1048576
root={{ taskd_data_location }}
server={{ ansible_default_ipv4['address'] }}:{{ taskd_port }}
trust=strict
verbose=1
client.cert={{ taskd_client_cert }}
client.key={{ taskd_client_key }}
server.cert={{ taskd_server_cert }}
server.key={{ taskd_server_key }}
server.crl={{ taskd_server_crl }}
log={{ taskd_data_location }}/taskd.log
pid.file={{ taskd_data_location }}/taskd.pid